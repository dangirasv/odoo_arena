<odoo>
    <data>

        <record model="ir.actions.act_window" id="odooarena.action_fighters">
            <field name="name">Odoo Arena Fighters</field>
            <field name="res_model">odooarena.fighter</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="odooarena.action_arena">
            <field name="name">Odoo Arena</field>
            <field name="res_model">odooarena.arena</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <h1>Welcome to the Arena!</h1>
                <p class="oe_view_nocontent_smiling_face">Please click the button to start the fight</p>
                <p>
                <button type="object" name="prepare_fight" string="Fight!"/>
                test</p>
                <footer>

                </footer>
            </field>
        </record>

        <record model="ir.ui.view" id="fighter_form_view">
            <field name="name">Fighter Status</field>
            <field name="model">odooarena.fighter</field>
            <field name="arch" type="xml">
                <form string="Character Screen">
                    <div id="container" style="width:100%;">
                        <div id="left" style="float:left; width:35%;">
                            <field name='image' widget="image" options='{"size": [400, 550]}' class="oe_right"/>
                        </div>
                        <div id="right" style="float:right; width:65%;">
                            <group colspan="4">
                                <group colspan="2" col="2">
                                    <separator string="Character Info" colspan="2"/>
                                    <field name="name"/>
                                    <field name="bio"/>
                                </group>

                                <group colspan="2" col="2">
                                    <separator string="Character Status" colspan="2"/>
                                    <field name="alive"/>
                                    <field name="fighting"/>
                                    <field name="level"/>
                                    <field name="maxhp"/>
                                    <field name="mindamage"/>
                                    <field name="maxdamage"/>
                                </group>
                            </group>
                        </div>
                    </div>
                    <footer>
                        <button type="action" name="%(odooarena.action_arena)d" string="start the fight"
                                attrs="{'invisible': [('fighting', '=', False)]}" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="fighter_tree_view">
            <field name="name">Fighter List</field>
            <field name="model">odooarena.fighter</field>
            <field name="arch" type="xml">
                <tree string="Fighter List">
                    <field name="name"/>
                    <field name="level"/>
                    <field name="maxhp"/>
                    <field name="alive"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="arena_form_view">
            <field name="name">Arena</field>
            <field name="model">odooarena.arena</field>
            <field name="arch" type="xml">
                <form string="Arena">
                    <div id="container" style="width:100%;">
                        <div id="left" style="float:left; width:35%;">
                            <field name='fighter_image' widget="image" options='{"size": [400, 550]}' class="oe_right"
                                   attrs="{'invisible': [('started', '=', False)]}"/>
                        </div>
                        <div id="right" style="float:right; width:65%;">
                            <group colspan="4">
                                <group colspan="2" col="2">
                                    <separator string="Character Info" colspan="2" attrs="{'invisible': [('started', '=', False)]}"/>
                                    <field name="fighter_name" attrs="{'invisible': [('started', '=', False)]}"/>
                                </group>

                                <group colspan="2" col="2">
                                    <separator string="Character Status" colspan="2" attrs="{'invisible': [('started', '=', False)]}"/>
                                    <field name="started" invisible="1"/>
                                    <field name="fighter_hp" widget="progressbar" attrs="{'invisible': [('started', '=', False)]}"/>
                                    <field name="combat_log" attrs="{'invisible': [('started', '=', False)]}"/>
                                </group>
                            </group>
                        </div>
                    </div>
                    <footer>

                        <button type="object" name="prepare_fight" string="Start the fight"
                                attrs="{'invisible': [('started', '=', True)]}" class="oe_highlight"/>

                    </footer>
                </form>
            </field>
        </record>





        <!-- Top menu item -->

        <menuitem name="Odoo Arena" id="odooarena.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Game" id="odooarena.menu_1" parent="odooarena.menu_root"/>

        <!-- actions -->

        <menuitem name="Fighters" id="odooarena.menu_1_fighters" parent="odooarena.menu_1"
                  action="odooarena.action_fighters"/>

        <menuitem name="Arena" id="odooarena.menu_1_arena" parent="odooarena.menu_1"
                  action="odooarena.action_arena"/>


    </data>
</odoo>
